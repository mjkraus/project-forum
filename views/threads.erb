<!-- Displays individual threads and votes. Allows commenting and displays previous comments. -->
<div class = "container">
  <div class="row">
    <div class="twelve columns threads_header">
	  <h2><%= @thread["title"]%></h2>
	</div>

	<div class="twelve columns threads_username">
	  <p><%= "posted by #{@thread["username"]}" %></p>
	</div>

	<div class="twelve columns threads_msg">
	  <%= @rendered_thread_msg %>
	</div>

	<form class="vote" action="/threads/<%= @thread_id %>" method="post">
	  <label for="up_votes"></label>
	  <input type="hidden" name="_method" value="put"/>  
	  <input class="button-primary" type="submit" name="up_votes" value="Love it!" />
<!-- 	<input class="button-primary" type="submit" name="up_votes" value="NO!" /> -->
	</form>	

	<div class="twelve columns threads_votes">
	  <img src="../images/noun_130904.png"/> <%= "#{@thread['votes']} likes" %>
	</div>

  </div>

  <form class="comment" action="/threads/<%= @thread_id %>" method="post">
    <label for="msg">Comment</label>
	<textarea class="u-full-width" placeholder="Write a comment..." name="msg"></textarea>

	<label for="username"></label>
	<input type="hidden" name="username" />

	<input class="button-primary" type="submit" value="submit" />
  </form>

  <div class="comments_display">
    <% @all_comments.each do |comment| %>
	  <div class="twelve columns comments_display">
	  <p><strong><%= "#{comment["username"]}" %></strong> <%= " \"#{comment["msg"]}\"" %></p>
	  </div>
    <%end%>
  </div>

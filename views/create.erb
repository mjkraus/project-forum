<div class="thread_creation_content">
<h1>Make A Thread</h1>
<% if @new_thread_submitted %>
<!-- should redirect once the thread is submitted -->
	<p class="new_thread_submitted">Thank you for posting a new thread!</p>
<% else %>
<form class="thread" actions="/create" method="post">
	<div class="input-row">
		<label for="topics_id">Topic:</label>
			<select name="topics_id">
			<% @topics.each do |topic| %>
			<option value="<%= "#{topic['id']}" %>"><%= "#{topic['name']}" %></option>
			<%end%>	
			</select>
	</div>
		
	<div class="input-row">
		<label for="title">Title: </label>
		<input type="text" name="title" />
	</div>

	<div class="input-row">
		<label for="msg">Msg: </label>
		<input type="text" name="msg" />
	</div>

	<div class="input-row">
		<label for="username">Username: </label>
		<input type="hidden" name="username" />
	</div>

	<div class="input-row">
	<input type="submit" value="Submit" />
	</div>	

</form>
<%end%>
</div>
	<div class="row popular">

<!-- 		<div class="four columns"> -->
		<div class="one-third column popular">
		<p><%= "#{popular1['name']}" %></p>
		<a href="/threads/<%="#{popular1['id']}"%>"><%= "#{popular1['title']}" %></a>
		<p><%= "posted by "+"#{popular1['username']}" %></p>
